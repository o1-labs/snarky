cc_test(
    name = "jmp",
    visibility = ["//visibility:public"],
    size = "small",
    copts = CFLAGS
    + select({
        ":is_64bit": ["-m64"],
        ":is_32bit": ["-m32"],
        "//conditions:default"   : []
    }),
    srcs = ["jmp.cpp"],
    deps = ["//xbyak", "//test/cybozu"]
)

cc_test(
    name = "address",
    visibility = ["//visibility:public"],
    size = "small",
    copts = CFLAGS
    + select({
        ":is_64bit": ["-m64"],
        ":is_32bit": ["-m32"],
        "//conditions:default"   : []
    }),
    srcs = ["address.cpp"],
    deps = ["//xbyak"]
)

cc_test(
    name = "bad_address",
    visibility = ["//visibility:public"],
    size = "small",
    copts = CFLAGS,
    srcs = ["bad_address.cpp"],
    deps = ["//xbyak", "//test/cybozu"]
)

cc_test(
    name = "misc",
    visibility = ["//visibility:public"],
    size = "small",
    copts = CFLAGS,
    srcs = ["misc.cpp"],
    deps = ["//xbyak", "//test/cybozu"]
)

cc_test(
    name = "cvt_test",
    visibility = ["//visibility:public"],
    size = "small",
    copts = CFLAGS,
    defines = select({
        ":is_32bit": ["XBYAK32"],
        "//conditions:default"   : []
    }),
    srcs = ["cvt_test.cpp"],
    deps = ["//xbyak", "//test/cybozu"]
)

cc_test(
    name = "cvt_test32",
    visibility = ["//visibility:public"],
    size = "small",
    copts = CFLAGS + ["-DXBYAK32"],
    srcs = ["cvt_test.cpp"],
    deps = ["//xbyak", "//test/cybozu"]
)

