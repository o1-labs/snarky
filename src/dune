(library
 (name snarky)
 (public_name snarky)
 (inline_tests)
 (modes native)
 (libraries core_kernel h_list fold_lib tuple_lib bitstring_lib interval_union
   bignum camlsnark_c ctypes yojson base64
   (select gpu_prover.ml from
    (groth16_gpu_prover -> gpu_prover.gpu.ml)
    (-> gpu_prover.no_gpu.ml)))
 (foreign_stubs
  (language c)
  (names libsnark_ffi_bindings vector_ffi_bindings)
  (flags :standard -lstdc++ -lpthread))
 (c_library_flags (:standard \ -pedantic) (-I re2_c/libre2))
 (preprocess
  (pps ppx_snarky ppx_jane ppx_deriving.enum ppx_deriving.eq bisect_ppx --
    -conditional)))

(rule
 (targets libsnark_ffi_bindings.c libsnark_ffi_bindings.ml vector_ffi_bindings.c vector_ffi_bindings.ml)
 (deps caml_curve.h.template)
 (action
  (run camlsnark_c/camlsnark_ctypes_stubs.exe)))

(rule
 (targets caml_curve.h.template common.h)
 (deps
   camlsnark_c/libsnark-caml/caml/caml_curve.h.template
   camlsnark_c/libsnark-caml/caml/common.h)
 (action
  (run cp %{deps} .)))
